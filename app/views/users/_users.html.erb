<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media" style="margin-bottom:10px">
        <img class="mr-2 rounded" src="<%= "/user_images/#{user.image_name}" %>" alt="profile image">
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>