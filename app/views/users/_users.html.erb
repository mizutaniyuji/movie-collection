<% if users.any? %>
<div class="kuuhaku">
  <ul class="list-unstyled">
    <% users.each do |user| %>
    <div class="user_list">
      <li class="media" style="margin-bottom:10px">
        <div class="media-body">
          <div class="img_wrap">
            <%= link_to user_path(user) do %>
              <% if user.image_name? %>
                <p class="user_image"><%= image_tag user.image_name_url %></p>
              <% else %>
               <p class="user_image"><%= image_tag "/assets/profile.png" %></p>
              <% end %>
            <% end %>
          </div>
          
            <p style="font-size:20px">User Name: <%= user.name %></p>
        </div>
      </li>
    </div>
    <% end %>
  </ul>
</div>
  <%= paginate users %>
<% end %>