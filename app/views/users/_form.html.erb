<div class="kuuhaku">
 <div class="edit_form">
    <h2>Edit Profile</h2>
    <%= form_with(model: user, local: true) do |f| %>
      <% if user.errors.any? %>
        <div id="error_explanation" class="alert alert-warning">
          <h3><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h3>
          <ul class="mb-0">
            <% user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name, 'Name' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :introduction, 'Your Introduction (within: 500 characters)' %>
        <%= f.text_area :introduction, class: 'form-control user_introduction', rows: 8 %>
      </div>
      
      <div class="form-group upload_wrap">
        <i class="fas fa-camera-retro"></i> Upload
        <p><%= f.file_field :image_name, :class => "upload_button"%></p>
      </div>
      
      
      <div class="edit_submit">
      <%= f.submit 'Resister', class: 'btn post_button' %>
      </div>
      
    <% end %>
  </div>
</div>
