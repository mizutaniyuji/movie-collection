<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= @user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= "/user_images/#{@user.image_name}" %>" alt="profile name">
      </div>
      <%= link_to 'プロフィールを編集する', edit_user_path(@user), class: 'btn btn-light' %>
    </div>
  </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">Movie Collections<span class="badge badge-secondary"> <%= @count_movies %> </span></a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followings</a></li>
      <li class="nav-item"><a href="#" class="nav-link">Followers</a></li>
    </ul>
    <%= @user.introduction %>
    <%= render 'movies/movies', movies: @movies %>
  </div>

</div>