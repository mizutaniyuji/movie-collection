<ul class="list-unstyled">
  <% movies.each do |movie| %>
    <li class="media mb-3 movies_container">
      <div class="media-body">
        <div class="img_wrap">
          <% if movie.image_name? %>
            <p class="movie_image"><%= image_tag movie.image_name.url %></p>
          <% else %>
           <p class="movie_image"><%= image_tag "https://res.cloudinary.com/hbvvwh0vr/image/upload/v1570982691/noimage_hj07ot.png" %></p>
          <% end %>
        </div>
          <p class="movie_title"><span class="movie_title_logo">Title</span><%= movie.title %></p>
          <p class="movie_category"><span class="movie_category_logo">Category</span><%= movie.category %></p>
        
        <ul class="list-unstyled">
            <li style="display:inline-block;"><%= render 'favorites/like_button', movie: movie %></li>
        </ul>
        
      </div>
    </li>
  <% end %>
  <%= paginate movies %>
</ul>