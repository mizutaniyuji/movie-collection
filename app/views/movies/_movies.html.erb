<ul class="list-unstyled">
  <% movies.each do |movie| %>
    <li class="media mb-3 movies_container">
      <div class="media-body">
        <div class="img_wrap hover_effect">
        <%= link_to movie_path(movie) do %>
          <% if movie.image_name? %>
            <div class="movie_image"><%= image_tag movie.image_name.url %></div>
          <% else %>
             <div class="movie_image"><img src="https://res.cloudinary.com/hbvvwh0vr/image/upload/v1570983763/noimage_k8cvmz"></div>
          <% end %>
        <% end %>
        </div>  
          <div class="movie_title"><span class="movie_title_logo">Title</span><%= movie.title %></div>
          <div class="movie_category"><span class="movie_category_logo">Category</span><%= movie.category %></div>
      </div>
        <ul class="list-unstyled">
            <li style="display:inline-block;"><%= render 'favorites/like_button', movie: movie %></li>
          <% if current_user == movie.user %>
            <li style="display:inline-block;"><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary btn-sm' %></li>
            <li style="display:inline-block;"><%= link_to "Delete", movie, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></li>
          <% end %>
        </ul>
    </li>
  <% end %>
  <%= paginate movies %>
</ul>