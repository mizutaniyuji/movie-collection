<ul class="list-unstyled">
  <% movies.each do |movie| %>
    <li class="media mb-3 movies_container">
      <div class="media-body">
        <div class="img_wrap">
        <% if movie.image_name? %>
          <p class="movie_image"><%= image_tag movie.image_name.url%></p>
        <% else %>
           <p class="movie_image"><%= image_tag "/assets/noimage.png"%></p>
        <% end %>
        </div>  
          <p class="movie_title"><span class="movie_title_logo">Title</span><%= movie.title %></p>
          <p class="movie_category"><span class="movie_category_logo">Category</span><%= movie.category %></p>
      </div>
        <ul class="list-unstyled">
            <li style="display:inline-block;"><%= render 'favorites/like_button', movie: movie %></li>
          <% if current_user == movie.user %>
            <li style="display:inline-block;"><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary btn-sm' %></li>
            <li style="display:inline-block;"><%= link_to "Delete", movie, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></li>
          <% end %>
        </ul>
    </li>
  <% end %>
  <%= paginate movies %>
</ul>